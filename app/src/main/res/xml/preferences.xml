<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Configurações">

        <EditTextPreference
            android:key="sharedCelular"
            android:title="Número da Linha"
            android:summary="Digite o número da linha"
            android:dialogMessage="Digite o número da Linha"
            app:useSimpleSummaryProvider="true"
            android:dialogTitle="Número da Linha"/>

        <EditTextPreference
            android:key="sharedUNB"
            android:title="UNB"
            android:summary="Digite o número do UNB"
            android:dialogMessage="Digite o número do UNB"
            app:useSimpleSummaryProvider="true"
            android:dialogTitle="Número do UNB"/>

    </PreferenceCategory>
</androidx.preference.PreferenceScreen>